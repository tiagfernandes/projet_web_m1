{% extends 'base.html.twig' %}

{% block title %}Competition{% endblock %}

{% block body %}
    <h1>Competition</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Date d√©but</th>
            <td>{{ competition.dateTimeStart ? competition.dateTimeStart|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Date fin</th>
            <td>{{ competition.dateTimeEnd ? competition.dateTimeEnd|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>
    <br/>
    <h3>Type de competition</h3>
    <table class="table table-striped table-bordered">
        <tbody>
        {% for competition in competition.competitions %}
            <tr>
                <td>{{ competition.arme }}</td>
                <td>{{ competition.blason }}</td>
                <td>{{ competition.civ ? competition.civ|join(', ') : '' }}</td>
                <td>{{ competition.categorie.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ include('competition/_delete_form.html.twig') }}
    <a href="{{ path('competition_edit', {'id': competition.id}) }}" class="text-warning"><i
                class="far fa-edit"></i> Editer</a>
    <br/>
    <a href="{{ path('competition_index') }}">Retour a la liste</a>

{% endblock %}
