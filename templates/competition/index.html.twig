{% extends 'base.html.twig' %}

{% block title %}Competition index{% endblock %}

{% block body %}
    <h1>Competition index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateTimeStart</th>
                <th>DateTimeEnd</th>
                <th>NbType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competition in competitions %}
            <tr>
                <td>{{ competition.id }}</td>
                <td>{{ competition.dateTimeStart ? competition.dateTimeStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ competition.dateTimeEnd ? competition.dateTimeEnd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ competition.typeCompetitions|length }}</td>
                <td>
                    <a href="{{ path('competition_show', {'id': competition.id}) }}">show</a>
                    <a href="{{ path('competition_edit', {'id': competition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('competition_new') }}">Create new</a>
{% endblock %}
