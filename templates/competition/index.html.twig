{% extends 'base.html.twig' %}

{% block title %}Competition index{% endblock %}

{% block body %}
    <h1>Competition index</h1>

    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>DateTimeStart</th>
            <th>DateTimeEnd</th>
            <th>Nombre compétition</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for jourCompetition in pagination %}
            <tr>
                <td>{{ jourCompetition.dateTimeStart ? jourCompetition.dateTimeStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ jourCompetition.dateTimeEnd ? jourCompetition.dateTimeEnd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ jourCompetition.competitions|length }}</td>
                <td>
                    <a href="{{ path('competition_show', {'id': jourCompetition.id}) }}" class="text-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('competition_edit', {'id': jourCompetition.id}) }}" class="text-warning"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <a href="{{ path('competition_new') }}">Ajouter un nouveau</a>
{% endblock %}
