{% extends 'base.html.twig' %}

{% block title %}Compétitions{% endblock %}

{% block body %}
    <h1>{{ block('title') }}</h1>

    {#    <div class="count">#}
    {#        {{ pagination.getTotalItemCount }}#}
    {#    </div>#}

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>DateTimeStart</th>
                <th>DateTimeEnd</th>
                <th>Nombre compétition</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for jourCompetition in pagination %}
                <tr>
                    <td>{{ jourCompetition.dateTimeStart ? jourCompetition.dateTimeStart|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ jourCompetition.dateTimeEnd ? jourCompetition.dateTimeEnd|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ jourCompetition.competitions|length }}</td>
                    <td>
                        <a href="{{ path('competition_show', {'id': jourCompetition.id}) }}" class="text-primary"><i
                                    class="fas fa-eye"></i></a>
                        <a href="{{ path('competition_edit', {'id': jourCompetition.id}) }}" class="text-warning"><i
                                    class="far fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun résultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <a href="{{ path('competition_new') }}">Ajouter une nouvelle comptétition</a>
{% endblock %}
