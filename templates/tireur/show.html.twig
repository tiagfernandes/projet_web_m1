{% extends 'base.html.twig' %}

{% block title %}Tireur{% endblock %}

{% block body %}
    <h1>Tireur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>FirstName</th>
                <td>{{ tireur.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ tireur.lastName }}</td>
            </tr>
            <tr>
                <th>DtBirthday</th>
                <td>{{ tireur.dtBirthday ? tireur.dtBirthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ tireur.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ tireur.phone }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ tireur.createdAt ? tireur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ tireur.username }}</td>
            </tr>
            <tr>
                <th>Handisport</th>
                <td>{{ tireur.handisport ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>MainForte</th>
                <td>{{ tireur.mainForte }}</td>
            </tr>
