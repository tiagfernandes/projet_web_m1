{% extends 'base.html.twig' %}

{% block title %}Tireur{% endblock %}

{% block body %}
    <h1>Tireur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ tireur.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tireur.lastName }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ tireur.dtBirthday ? tireur.dtBirthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ tireur.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ tireur.phone }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ tireur.createdAt ? tireur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Identifiant</th>
                <td>{{ tireur.username }}</td>
            </tr>
            <tr>
                <th>Handisport</th>
                <td>{{ tireur.handisport ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>MainForte</th>
                <td>{{ tireur.mainForte }}</td>
            </tr>
            <tr>
                <th>Groupe</th>
                <td>{{ tireur.groupe }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mb-1" href="{{ path('tireur_index') }}">retour à la liste</a>

    <a class="btn btn-info" href="{{ path('tireur_edit', {'id': tireur.id}) }}"><i class="far fa-edit"></i></a>

    {{ include('tireur/_delete_form.html.twig') }}
{% endblock %}
