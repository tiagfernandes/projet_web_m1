{% extends 'base.html.twig' %}

{% block title %}Objectif{% endblock %}

{% block body %}
    <h1>Objectif</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descriptif</th>
                <th>Fix√© par</th>
                <th>Pour</th>
                <th>Atteint</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for objectif in objectifs %}
            <tr>
                <td>{{ objectif.id }}</td>
                <td>{{ objectif.descriptif }}</td>
                <td>{{ objectif.createdBy }}</td>
                <td>{{ objectif.tireur }}</td>
